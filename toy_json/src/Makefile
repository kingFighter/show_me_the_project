# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  toy_json_config = debug
  unit_test_config = debug
endif
ifeq ($(config),release)
  toy_json_config = release
  unit_test_config = release
endif

PROJECTS := toy_json unit_test

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

toy_json:
ifneq (,$(toy_json_config))
	@echo "==== Building toy_json ($(toy_json_config)) ===="
	@${MAKE} --no-print-directory -C build -f toy_json.make config=$(toy_json_config)
endif

unit_test: toy_json
ifneq (,$(unit_test_config))
	@echo "==== Building unit_test ($(unit_test_config)) ===="
	@${MAKE} --no-print-directory -C build -f unit_test.make config=$(unit_test_config)
endif

clean:
	@${MAKE} --no-print-directory -C build -f toy_json.make clean
	@${MAKE} --no-print-directory -C build -f unit_test.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   toy_json"
	@echo "   unit_test"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"